@model CUAHANGBANSACH.Models.PHIEUMUAHANG

@{
    ViewBag.Title = "Details";
}
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>PHIẾU MUA HÀNG @Model.maphieumuahang</h2>
                <hr class="colorgraph"/>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ngaylap)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ngaylap)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.tinhtrangthanhtoan)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tinhtrangthanhtoan)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.tinhtrang)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tinhtrang)
                    </dd>



                </dl>
            </div>

            <div class="col-lg-12">
                <h2>DANH SÁCH CÁC CUỐN SÁCH TRONG ĐƠN HÀNG @Model.maphieumuahang</h2>
                <table class="table">
                    <tr>
                        <th>
                            Mã Sách
                        </th>
                        <th>
                            Tên Sách
                        </th>

                        <th>
                            Đặc Điểm
                        </th>
                        <th>
                            Ảnh Sản Phẩm
                        </th>
                        <th>Số Lượng Mua</th>
                        <th>
                            Đơn Giá
                        </th>
                        <th>Thành Tiền</th>


                    </tr>

                    @foreach (var item in Model.dsSach)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.masach)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tensach)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.dacdiem)
                            </td>
                            <td>
                                <img src="@item.anhsanpham" style="width: 50px" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.soluongmua)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dongia) VND
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.thanhtien) VND</td>

                            <td>
                                <input type="button" style="color: white; background-color:darkblue;" value="Edit" onclick="location.href='@Url.Action("EditSLSach", "GioHang", routeValues: new { @Ma_Sach = item.masach })'" />
                                <input type="button" style="color: white; background-color: red;" value="Thông tin sách" onclick="location.href='@Url.Action("Detail", "SHOP", routeValues: new { @MaSach = item.masach })'" />
                                <input type="button" style="color: white; background-color: grey;" value="Xóa sản phẩm ra khỏi giỏ hàng" onclick="location.href='@Url.Action("DeleteSACH", "GioHang", routeValues: new { @Ma_Sach = item.masach })'" />
                               
                            </td>
                        </tr>
                    }

                </table>
                <h3>Tổng giá trị hóa đơn: @Html.DisplayFor(model => model.DHTotal) VND</h3>
                <p>
                    @Html.ActionLink("Thêm Sách vào giỏ hàng", "Edit", routeValues: new { @Ma_DH = Model.maphieumuahang }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        </div>
    </div>

</section>

