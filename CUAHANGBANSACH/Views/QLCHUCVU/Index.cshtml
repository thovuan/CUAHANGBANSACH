@model IEnumerable<CUAHANGBANSACH.Models.CHUCVU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}


<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>DANH SÁCH CHỨC VỤ</h2>
                <hr class="colorgraph" />

                <div class="col-lg-4" style="margin-top:10px; margin-bottom: 10px">
                    <input type="button" style="color: white; background-color: yellowgreen;" value="Thêm chức vụ" onclick="location.href='@Url.Action("Create", "QLCHUCVU")'" />

                </div>

                <div class="col-lg-8" style="margin-top:10px; margin-bottom: 10px">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6">

                            @Html.Editor("Find", "", new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Nhập tên chức vụ cần tìm" } })

                        </div>
                        <div class="col-lg-2">
                            <input type="submit" value="Tìm kiếm" class="btn btn-default" />
                        </div>
                    }
                </div>

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tenchucvu)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tinhtrang)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tenchucvu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tinhtrang)
                            </td>
                            <td>
                                <input type="button" style="color: white; background-color:darkblue;" value="Edit" onclick="location.href='@Url.Action("Edit", "QLCHUCVU", routeValues: new { @MaCV = item.machucvu })'" />
                                <input type="button" style="color: white; background-color: red;" value="Thông tin chức vụ" onclick="location.href='@Url.Action("Details", "QLCHUCVU", routeValues: new { @MaCV = item.machucvu })'" />
                                <input type="button" style="color: white; background-color: grey;" value="Xóa chức vụ" onclick="location.href='@Url.Action("Delete","QLCHUCVU", routeValues: new { @MaCV = item.machucvu })'" />

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

    
</section>

