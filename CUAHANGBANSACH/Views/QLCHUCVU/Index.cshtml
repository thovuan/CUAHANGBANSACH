@model IEnumerable<CUAHANGBANSACH.Models.CHUCVU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}


<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>DANH SÁCH CHỨC VỤ</h2>
                <hr class="colorgraph" />
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tenchucvu)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tinhtrang)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tenchucvu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tinhtrang)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", routeValues: new { @MaCV = item.machucvu }) |
                                @Html.ActionLink("Details", "Details", routeValues: new { @MaCV = item.machucvu }) |
                                @Html.ActionLink("Delete", "Delete", routeValues: new { @MaCV = item.machucvu })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

    
</section>

