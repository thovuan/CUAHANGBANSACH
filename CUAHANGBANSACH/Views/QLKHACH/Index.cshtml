@model IEnumerable<CUAHANGBANSACH.Models.KHACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}


<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>DANH SÁCH TÀI KHOẢN KHÁCH HÀNG</h2>
                <hr class="colorgraph" />

                <div class="col-lg-8" style="margin-top:10px; margin-bottom: 10px">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6">

                            @Html.Editor("Find", "", new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Nhập tên khách hàng cần tìm" } })

                        </div>
                        <div class="col-lg-2">
                            <input type="submit" value="Tìm kiếm" class="btn btn-default" />
                        </div>
                    }
                </div>

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tenkhachhang)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.diachi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sdt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.avatar)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tenkhachhang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.diachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sdt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.avatar)
                            </td>

                            <td>
                                <input type="button" style="color: white; background-color: darkblue;" value="Thông tin khách" onclick="location.href='@Url.Action("Details", "QLKHACH", routeValues: new { @Ma_KH = item.makhachhang })'" />
                                <input type="button" style="color: white; background-color: red;" value="Xóa tài khoàn khách" onclick="location.href='@Url.Action("Delete", "QLKHACH", routeValues: new { @id = item.makhachhang })'" />

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
    
</section>

