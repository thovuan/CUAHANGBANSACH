@model CUAHANGBANSACH.Models.SACH

@{
    ViewBag.Title = "UploadImage";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}


<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm("UploadImage", "QLSACH", FormMethod.Post, new {enctype="multipart/form-data"}))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Upload ảnh cho sách @Model.masach</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.masach)

                    <div class="form-group">
                        
                            <input type="file" class="form-control" name="image" />
                        

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

            </div>
        </div>

    </div>

</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
