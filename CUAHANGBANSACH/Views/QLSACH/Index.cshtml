@model IEnumerable<CUAHANGBANSACH.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}



<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>DANH SÁCH SÁCH</h2>
                <hr class="colorgraph" />

                <div class="col-lg-4" style="margin-top:10px; margin-bottom: 10px">
                    <input type="button" style="color: white; background-color: yellowgreen;" value="Thêm sách" onclick="location.href='@Url.Action("Create", "QLSACH")'" />

                </div>

                <div class="col-lg-8" style="margin-top:10px; margin-bottom: 10px">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6" >

                            @Html.Editor("Find", "", new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Nhập tên sản phẩm cần tìm" } })

                        </div>
                        <div class="col-lg-2" >
                            <input type="submit" value="Tìm kiếm" class="btn btn-default" />
                        </div>
                    }
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.masach)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tensach)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.soluonghienco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dacdiem)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.anhsanpham)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DVT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dongia)
                        </th>
                        <th>
                            Tên Thể Loại
                        </th>

                        <th>
                            Nhà Xuất Bản
                        </th>
                        <th>
                            Tên Nhân Viên
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.masach)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tensach)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.soluonghienco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dacdiem)
                            </td>
                            <td>
                                <img src="@item.anhsanpham" style="width: 50px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DVT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dongia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tentheloai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tennxb)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tennhanvien)
                            </td>
                            <td>
                                <input type="button" style="color: white; background-color:darkblue;" value="Edit" onclick="location.href='@Url.Action("Edit", "QLSACH", routeValues: new { @Ma_Sach = item.masach })'" />
                                <input type="button" style="color: white; background-color: red;" value="Thông tin sách" onclick="location.href='@Url.Action("Details", "QLSACH", routeValues: new { @Ma_Sach = item.masach })'" />
                                <input type="button" style="color: white; background-color: grey;" value="Xóa sách" onclick="location.href='@Url.Action("Delete", "QLSACH", routeValues: new { @Ma_Sach = item.masach })'" />

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

    

</section>
