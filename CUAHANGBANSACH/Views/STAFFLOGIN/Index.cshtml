@model CUAHANGBANSACH.Models.NHANVIEN

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout_Staff.cshtml";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}


<section id="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm("Index", "STAFFLOGIN", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    <h1>Trang Đăng Nhập dành riêng cho Nhân Viên</h1>
                    <h2>Login</h2>
                    <hr class="colorgraph" />
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.tendangnhap, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Tài Khoản Nhân Viên" })<br />
                        @Html.ValidationMessageFor(m => m.tendangnhap, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.matkhau, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Mật Khẩu", type = "password" }) <br />
                        @Html.ValidationMessageFor(m => m.matkhau, "", new { @class = "text-danger" })

                    </div>
                    
                    <input type="submit" value="Đăng Nhập" />
                    <br />

                    //@Html.ValidationSummary(false, "");
                    @ViewBag.Status
                }

                
            </div>
        </div>
    </div>


    
</section>

