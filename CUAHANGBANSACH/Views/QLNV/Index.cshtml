@model IEnumerable<CUAHANGBANSACH.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}

<h2>Index</h2>
<section id="content">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.manhanvien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tendangnhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tennhanvien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.matkhau)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.manhanvien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tendangnhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tennhanvien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.matkhau)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", routeValues: new { @MaNV = item.manhanvien }) |
                    @Html.ActionLink("Details", "Details", routeValues: new { @MaNV = item.manhanvien }) |
                    @Html.ActionLink("Delete", "Delete", routeValues: new { @MaNV = item.manhanvien })
                </td>
            </tr>
        }

    </table>
</section>

