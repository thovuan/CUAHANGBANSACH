@model CUAHANGBANSACH.Models.Combined_Model.NHANVIEN_DANHSACHCHUCVU_MODEL

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Cập nhật thông tin nhân viên @Model.NHANVIEN.tennhanvien</h4>
                        @Html.HiddenFor(model => model.NHANVIEN.manhanvien)

                        <h5>Cập nhật tài khoản</h5>
                        <hr class="colorgraph" />

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NHANVIEN.tendangnhap, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Tên đăng nhập" } })
                                @Html.ValidationMessageFor(model => model.NHANVIEN.tendangnhap, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NHANVIEN.matkhau, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Mật Khẩu", type = "password" } })
                                @Html.ValidationMessageFor(model => model.NHANVIEN.matkhau, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <hr class="colorgraph" />
                        <h5>Cập nhật Thông tin nhân viên cơ bản</h5>

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NHANVIEN.tennhanvien, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Tên Nhân Viên" } })
                                @Html.ValidationMessageFor(model => model.NHANVIEN.tennhanvien, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
