@model CUAHANGBANSACH.Models.SACH

@{
    ViewBag.Title = "Detail";
}

<section id="content">
    <div class="container">
        <div class="row">
            <h2>Chi tiết thông tin Sách @Model.masach</h2>
            <hr class="colorgraph" />
            <div class="col-lg-4">
                <h3>Ảnh sản phẩm</h3>
                <div class="form-group">
                    @if (!string.IsNullOrEmpty(Model.anhsanpham))
                    {
                        <img src=@Model.anhsanpham style="width: 200px; height: auto;" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }

                </div>
            
            </div>

            <dl class="col-lg-8">
                <dt>
                    @Html.DisplayNameFor(model => model.tensach)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tensach)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.soluonghienco)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.soluonghienco)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.dacdiem)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.dacdiem)
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.DVT)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DVT)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.dongia)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.dongia)
                </dd>

                <dt>Tên thể loại</dt>
                <dd>@Html.DisplayFor(model => model.tentheloai) </dd>

            </dl>
        </div>
        <div class="form-group">
            <input type="button" value="Trở lại shop" onclick="location.href='@Url.Action("Index")'" />
        </div>

    </div>




</section>


