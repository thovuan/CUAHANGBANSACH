@{
    ViewBag.Title = "SHOP STLD";
}

<section id="featured" class="bg">
    <!-- start slider -->
    <!-- start slider -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Slider -->
                <div id="main-slider" class="main-slider flexslider">
                    <ul class="slides">
                        <li>
                            <img src="~/Content/PIC_INTRO/cong torii.jpg" alt="" />
                            <div class="flex-caption">
                                <h3>Welcome to the STLD shop</h3>
                                <p>It's touch the Japan's spirit</p>
                                <a href="#" class="btn btn-theme">Learn More</a>
                            </div>
                        </li>

                        <li>
                            <img src="~/Content/PIC_INTRO/marugoto.jpg" alt="" />
                            <div class="flex-caption">
                                <h3>MARUGOTO</h3>
                                <p>TRỌN BỘ MARUGOTO TẠI ĐÂY</p>
                                <a href="#" class="btn btn-theme">Learn More</a>
                            </div>
                        </li>
                        <li>
                            <img src="~/Content/PIC_INTRO/manga-anime-la-gi.jpg" alt="" />
                            <div class="flex-caption">
                                <h3>MANGA</h3>
                                <p>TRỌN BỘ MANGA TẠI ĐÂY</p>
                                <a href="#" class="btn btn-theme">Learn More</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <!-- end slider -->
            </div>
        </div>
    </div>

</section>

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="title">SÁCH BÁN CHẠY</h2>
                
                <div class="row2">
                    @{
                        List<SACH> topsell = SACH_DAO.Top8_Seller();
                        foreach (SACH sach in topsell)
                        {
                            <div class="col-4">
                                <img src="@sach.anhsanpham" />
                                <p>Mã sách: @sach.masach</p>
                                <h4>@sach.tensach</h4>
                                <h5>Đơn Giá: @sach.dongia</h5>
                                <h6>Số lượng hiện có: @sach.soluonghienco</h6>
                                <button onclick="Lay_Thongtin('@sach.masach')" data-toggle="modal" data-target=".bs-modal-lg_1">Chi tiết</button>

                                <input type="button" style="color: white; background-color:darkblue;" value="Thêm vào giỏ hàng" onclick="location.href='@Url.Action("Buy", "SHOP", routeValues: new { @MaSach = sach.masach })'" />
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
    
</section>

<section id="content">
    
    <!-- clients -->
    <div class="container">
        <div class="row align-center">
            <div class="col-xs-6 col-md-2 aligncenter client">
                <img alt="logo" src="~/Content/Logo/Visual_Studio_Icon_2022.svg.png" class="img-responsive" />
            </div>

            <div class="col-xs-6 col-md-2 aligncenter client">
                <img alt="logo" src="~/Content/Logo/VisualStudioCode.png" class="img-responsive" />
            </div>

            <div class="col-xs-6 col-md-2 aligncenter client">
                <img alt="logo" src="~/Content/Logo/C_sharp.svg.png" class="img-responsive" />
            </div>

            <div class="col-xs-6 col-md-2 aligncenter client">
                <img alt="logo" src="~/Content/Logo/aspnet_mvc.png" class="img-responsive" />
            </div>

            <div class="col-xs-6 col-md-2 aligncenter client">
                <img alt="logo" src="~/Content/Logo/SQL_Server.png" class="img-responsive" />
            </div>

        </div>
    </div>

</section>


