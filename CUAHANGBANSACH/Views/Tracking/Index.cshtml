@model CUAHANGBANSACH.Models.PHIEUMUAHANG_KHACH.PHIEUMUAHANG_KHACH_MODEL

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h2>TÌM KIẾM ĐƠN HÀNG</h2>
                        <hr class="colorgraph" />

                        <div class="form-group">
                            Nhập Mã đơn hàng cần tìm
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PHIEUMUAHANG.maphieumuahang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.HiddenFor(model => model.PHIEUMUAHANG.maphieumuahang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PHIEUMUAHANG.maphieumuahang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            Nhập Email xác nhận
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.KHACH.tenkhachhang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.HiddenFor(model => model.KHACH.tenkhachhang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KHACH.tenkhachhang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr class="colorgraph" />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Tìm kiếm" class="btn btn-default" />
                                
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
