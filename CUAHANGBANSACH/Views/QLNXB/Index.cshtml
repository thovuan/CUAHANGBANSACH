@model IEnumerable<CUAHANGBANSACH.Models.NXB>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Staff.cshtml";
}


@if (Model == null)
{
    <h2>Danh sách rỗng</h2>
}
else
{
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>DANH SÁCH NHÀ XUẤT BẢN</h2>
                    <hr class="colorgraph" />


                    <div class="col-lg-4" style="margin-top:10px; margin-bottom: 10px">
                        <input type="button" style="color: white; background-color:green;" value="Add new TL" onclick="location.href='@Url.Action("Create", "QLNXB")'" />

                    </div>

                    <div class="col-lg-8" style="margin-top:10px; margin-bottom: 10px">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-lg-6">

                                @Html.Editor("Find", "", new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Nhập tên nhà xuất bản cần tìm" } })

                            </div>
                            <div class="col-lg-2">
                                <input type="submit" value="Tìm kiếm" class="btn btn-default" />
                            </div>
                        }
                    </div>

                    <div class="card mb-12">
                        <div class="card-body">
                            @if (ViewBag.Success != null)
                            {
                                <div id="msgAlert" class="alert alert-success" role="alert">
                                    @ViewBag.Success
                                </div>
                            }
                            else if (ViewBag.Failure != null)
                            {
                                <div id="msgAlert" class="alert alert-danger" role="alert">
                                    @ViewBag.Failure
                                </div>

                            }
                        </div>
                    </div>
                    <table class="table">
                        <tr>
                            <th>
                                Mã NXB
                            </th>
                            <th>
                                Tên NXB
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.manxb) </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tennxb)
                                </td>
                                <td>
                                    <input type="button" style="color: white; background-color:darkblue;" value="Edit" onclick="location.href='@Url.Action("Edit", "QLNXB", routeValues: new { @MaNXB = item.manxb })'" />
                                    <input type="button" style="color: white; background-color: red;" value="Thông tin nhà xuất bản" onclick="location.href='@Url.Action("Detail", "QLNXB", routeValues: new { @MaNXB = item.manxb })'" />
                                    <input type="button" style="color: white; background-color: grey;" value="Xóa NXB" onclick="location.href='@Url.Action("Delete", "QLNXB", routeValues: new { @MaNXB = item.manxb })'" />

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>

    </section>
}


